<body>
 <div id="wapper"  >
	<div class="touxiang add1 "  v-on:click='openPic' v-show='!data'  > <p v-show="!data">注册</p></div>
	<img v-if="data" v-bind:src='data' v-on:click="" />
	<div id="frame" >
	<form>
	<div class="zhanghao" ><input id="MZ" type="text"  placeholder="姓名" v-model='name'  value="" /></div>
	<div class="zhanghao" ><input type="number"  placeholder="账号" v-model='count'  value="" /></div>
	<div class="mima" ><input type="password" placeholder="密码" v-model='pas' value="" /></div>
	<div class="denglu" ><input type="button" value="确认" v-on:click='submit' /></div>
	</form>
	</div>
</div>	
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/vue.js" ></script>
<script type="text/javascript">
	apiready = function(){

		var app = new Vue({
		   el:'#wapper',
		   data:{
		     data:'',
		     name:'',
		     count:'',
		     pas:'',
		   },
		   methods:{
		      openPic:function(){
		         api.confirm({
		         title:'提示',
		         msg:'从哪里取照片？',
		         buttons:['拍照','相册','取消']
                 },function(ret,err){
                 	if(3==ret.buttonIndex){
                 	   return;
                 	}
                 	var sourceType = 'album';
                 	
                 	if(1==ret.buttonIndex){
                 	  sourceType = 'camera';
                 	}
                 	
                 	api.getPicture({
				    sourceType: sourceType,
				    encodingType: 'jpg',
				    mediaValue: 'pic',
				}, function(ret, err) {
				    if (ret) {
				        alert(JSON.stringify(ret));
				        app.data = ret.data;
				    } else {
				        alert(JSON.stringify(err));
				    }
				});
                 	
                 });
		      },
		      
		      
		      
		      
		      submit:function(){
		     if(this.name==""||this.count==""||this.pas==""){
		     alert("非空");
		     return; 
		   };
		   
		   
		  
		  
		     this.color=true;
		     this.dsb="disabled"
		      api.ajax({
			  url: 'http://www.abccome.xyz/vue/signup.php',    //signup.php
			    method: 'get',
			    dataType:'text',
			    data: {
			            values: {
			            name: this.name,
			            count:this.count,
			            pas:this.pas          
			        }
			       
			    }
			}, function(ret, err) {
			    if (ret==0) {
			       alert("账号已经存在");
			        wapper.color=false;
			        wapper.dsb=false;
			    } else {
			        wapper.color=false;
			        wapper.dsb=false;
			        alert("注册成功");
			        var user={};
			        user.name=wapper.name;
			        user.count=wapper.count;
			        user.pas=wapper.pas;
			        $api.setStorage('users',user);
			        api.closeWin({
                      name:'signin'
                    });
			    }
			    
			  
			    
			     //  重新放置属性
			   document.getElementsByTagName('form')[0].reset();
	
			     // 重新放置属性
			    // 关闭反应
			     activity.closeKeyFrame({
					    id: 1
					});
			     //关闭反应
			     
			    
			});
		      
		      
		      
			//  提交数据到书记库
		      //这里只是用来增加一个用户的体验
		      var activity = api.require('UILoading');
				activity.keyFrame({
				    rect: {
				        w: 80,
				        h: 100
				    },
				    styles: {
				        bg: 'rgba(0,0,0,0.5)',
				        corner: 5,
				        interval: 50,
				        frame: {
				            w: 80,
				            h: 80
				        }
				    }
				}, function(ret) {
				    alert(JSON.stringify(ret));
				});
				//提交的时候 上下跳动 
		      
		      
		      
		      
		      
		     }
		      
		      
		   
		   }
		});
	};
</script>
</html>